{
  "manifest_version": 3,
  "name": "ReadAble",
  "description": "Makes reading news and educational websites more accessible to people with disabilities",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/OpenDyslexic/compiled/OpenDyslexic-Regular.woff2",
        "fonts/OpenDyslexic/compiled/OpenDyslexic-Bold.woff2",
        "fonts/OpenDyslexic/compiled/OpenDyslexic-Italic.woff2",
        "fonts/OpenDyslexic/compiled/OpenDyslexic-Bold-Italic.woff2"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}