{
  "manifest_version": 3,
  "name": "ReadAble",
  "description": "Makes reading news and educational websites more accessible to people with disabilities",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": [
    "*://*.edu/*",
    "*://*.gov/*",
    "*://*.bbc.com/*",
    "*://*.nytimes.com/*",
    "*://*.cnn.com/*",
    "*://*.reuters.com/*",
    "*://*.washingtonpost.com/*",
    "*://*.theguardian.com/*",
    "*://*.wsj.com/*",
    "*://*.nbcnews.com/*",
    "*://*.cbsnews.com/*",
    "*://*.abcnews.go.com/*"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.edu/*",
        "*://*.gov/*",
        "*://*.bbc.com/*",
        "*://*.nytimes.com/*",
        "*://*.cnn.com/*",
        "*://*.reuters.com/*",
        "*://*.washingtonpost.com/*",
        "*://*.theguardian.com/*",
        "*://*.wsj.com/*",
        "*://*.nbcnews.com/*",
        "*://*.cbsnews.com/*",
        "*://*.abcnews.go.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}